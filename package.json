{
  "name": "le-challenge-redis",
  "version": "1.0.0",
  "description": "A redis-based strategy for node-letsencrypt for setting, retrieving, and clearing ACME challenges issued by the ACME server",
  "author": "Casey Webb <notcaseywebb@gmail.com> (https://caseyWebb.xyz/)",
  "license": "WTFPL",
  "homepage": "https://github.com/caseyWebb/le-challenge-redis#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caseyWebb/le-challenge-redis.git"
  },
  "bugs": {
    "url": "https://github.com/caseyWebb/le-challenge-redis/issues"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "posttest:docker": "docker-compose down",
    "lint": "eslint --ignore-path .gitignore --ext .ts ./",
    "format": "pretty-quick",
    "release": "standard-version --sign && git push --follow-tags"
  },
  "keywords": [
    "acme",
    "challenge",
    "cluster",
    "ephemeral",
    "http",
    "http-01",
    "le",
    "le-challenge",
    "le-challenge-",
    "le-challenge-redis",
    "le-challenge-memory",
    "le-challenge-database",
    "letsencrypt",
    "greenlock",
    "node-greenlock",
    "redis"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-profiscience"
    ],
    "env": {
      "jest": true
    }
  },
  "husky": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "yarn format --staged"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "redis": "^2.8.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@types/redis": "^2.8.13",
    "acme-http-01-test": "^3.1.3",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.2.1",
    "eslint-config-profiscience": "^4.0.8",
    "husky": "^3.0.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "standard-version": "^7.0.0"
  },
  "peerDependencies": {
    "greenlock": "3.x.x"
  }
}
