{
  "name": "le-challenge-redis",
  "version": "3.0.1",
  "description": "A redis-based strategy for node-letsencrypt for setting, retrieving, and clearing ACME challenges issued by the ACME server",
  "author": "Casey Webb <notcaseywebb@gmail.com> (https://caseyWebb.xyz/)",
  "license": "WTFPL",
  "homepage": "https://github.com/caseyWebb/le-challenge-redis#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caseyWebb/le-challenge-redis.git"
  },
  "bugs": {
    "url": "https://github.com/caseyWebb/le-challenge-redis/issues"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "posttest:docker": "docker-compose down",
    "lint": "eslint --ignore-path .gitignore --ext .ts ./",
    "format": "pretty-quick",
    "release": "standard-version --sign && git push --follow-tags",
    "prepare": "husky install"
  },
  "keywords": [
    "acme",
    "challenge",
    "cluster",
    "ephemeral",
    "http",
    "http-01",
    "le",
    "le-challenge",
    "le-challenge-",
    "le-challenge-redis",
    "le-challenge-memory",
    "le-challenge-database",
    "letsencrypt",
    "greenlock",
    "node-greenlock",
    "redis"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "profiscience"
    ],
    "env": {
      "jest": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/restrict-template-expressions": 0
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "redis": "^4.0.1",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.0.0",
    "acme-http-01-test": "^3.1.3",
    "bluebird": "^3.5.5",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^8.6.0",
    "eslint-config-profiscience": "^7.0.1",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "greenlock": "3.x.x"
  }
}
